<resources>

    <style name="BaseTheme" parent="android:Theme.Holo" />
    <style name="BaseActionbarTheme" parent="android:Widget.Holo.ActionBar.Solid" />
    <style name="BaseDialogTheme" parent="android:Theme.Holo.Dialog" />

    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/actionbar</item>
    </style>

    <style name="AboutTheme" parent="AppTheme" />

    <style name="actionbar" parent="BaseActionbarTheme">
        <item name="android:background">@color/semitransparent_background</item>
    </style>

    <style name="AppTheme.textViewStyle">
        <item name="android:background">@color/semitransparent_background</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="picture_map_layout">
        <item name="android:orientation">vertical</item>
    </style>
</resources>
