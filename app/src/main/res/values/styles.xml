<resources>

    <style name="BaseTheme" parent="Base.Theme.AppCompat" />
    <style name="BaseActionbarTheme" parent="Widget.AppCompat.ActionBar.Solid" />
    <style name="BaseDialogTheme" parent="Theme.AppCompat.Dialog" />

    <style name="AppTheme" parent="BaseTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/actionbar</item>
    </style>

    <style name="AboutTheme" parent="AppTheme" />

    <style name="actionbar" parent="BaseActionbarTheme">
        <item name="android:background">@color/semitransparent_background</item>
    </style>

    <style name="AppTheme.textViewStyle">
        <item name="android:background">@color/semitransparent_background</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="picture_map_layout">
        <item name="android:orientation">vertical</item>
    </style>
</resources>
